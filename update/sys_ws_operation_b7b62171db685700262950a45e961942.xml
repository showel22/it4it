        <name>getByUser</name>
        <operation_script><![CDATA[(function process(/*RESTAPIRequest*/ request, /*RESTAPIResponse*/ response) {
	
	var responseObj, hpGR, error;
	
    hpGR = new GlideRecord('x_gege9_it4it_homepage_preferences');
	hpGR.addQuery('active', true);
	hpGR.addQuery('user', request.pathParams.userID);
	hpGR.query();
	if(hpGR.hasNext()){
		hpGR.next();
		responseObj = {
			'user': hpGR.user,
			'sys_id': hpGR.sys_id,
			'tabbed_cards' : hpGR.tabbed_cards
		};
		response.setBody(responseObj);
		response.setStatus(200);
	}else{
		error = new sn_ws_err.ServiceError();
		error.setStatus(404);
		error.setMessage('There is no active preference for this user.');
		error.setDetail('Verify the preference is active and that the userID is correct.');
		return error;
	}

})(request, response);]]></operation_script>
